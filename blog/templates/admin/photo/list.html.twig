{% extends "admin/base.html.twig" %}
{% block body %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>相簿內容</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ url("admin.index") }}">Home Page</a></li>
                        <li class="breadcrumb-item active">相簿內容</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <b>相簿描述</b>
                            <p>{{ album.getDescription() }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">照片</th>
                                        <th scope="col">相片名稱</th>
                                        <th scope="col">下線時間</th>
                                        <th scope="col" >其他動作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for photo in photos %}
                                    <tr>
                                        <th scope="row" style="width: 120px;">
                                            <img style="width: 50%;" src="{{ photo.getContentName()}}" />
                                        </th>
                                        <td style="vertical-align: middle">{{ photo.getName() }}</td>
                                        <td style="vertical-align: middle">{{ photo.getOfflineAt|date("Y-m-d") }}</td>
                                        <td style="vertical-align: middle">
                                            <a href="{{ url("admin.photo.fetch", {"id": photo.getId()}) }}">
                                                <button class="btn btn-primary btn-xs" style="margin: 0 10px 0 0;">
                                                    <i class="fas fa-eye"></i> 照片資訊
                                                </button>
                                            </a>
                                            <a href="{{ url("admin.photo.update", {"id": photo.getId()}) }}">
                                                <button class="btn btn-warning btn-xs" style="margin: 0 10px 0 0;">
                                                    <i class="fas fa-edit"></i> 更新照片
                                                </button>
                                            </a>
                                            <a href="{{ url("admin.photo.delete", {"id": photo.getId()}) }}">
                                                <button class="btn btn-danger btn-xs" style="margin: 0 10px 0 0;">
                                                    <i class="fas fa-trash"></i> 刪除照片
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ url("admin.photo.create", {"albumId": albumId}) }}">
                                <button class="btn btn-info">新增照片</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
