                        <div class="section2-slick-container">
                            <div class="wrap">
                                <div id="section2-column-slick2" class="section2-slick left">
                                    <div class="item" style="background-image: url({{ asset('assets/image/index/2_2.jpg') }});">
                                        <div class="item__text">
                                            <h1>Flexographic water-based ink</h1>
                                            {% if locale == "zh_tw" %}
