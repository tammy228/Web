{% if locale == 'zh_tw' %}
    {% set twig = "zh_base.html.twig" %}
    {% set css =  'assets/css/news_detail.css'%}
{% else %}
    {% set twig = "en_base.html.twig" %}
    {% set css =  'assets/en/css/news_detail.css'%}
{% endif %}

{% extends 'website/'~ twig %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset(css) }}">
{% endblock %}


{% block body %}
    <header>
        <div class="header-wrap">
            <p class="main__company-name">
                <span class="chi">富蘭工業股份有限公司</span>
                <span class="eng">Full Land Industrial Corp.</span>
            </p>
            <div class="main__social">
                <div>FOLLOW US</div>
                <a class="icon-fb" href="https://www.facebook.com/paperbagfullland/" target="_blank"></a>
            </div>
            <div class="header__back"></div>
            <!-- <div class="header__back-text">The Brand Carrier</div> -->
            <!-- <ul class="header__map">
              <li>TOP</li>
              <li>News</li>
            </ul> -->
            <div class="header__content">
                <div class="column">
                    <h1>News</h1>
                    {% if locale == 'zh_tw' %}
                        <h2>最新消息</h2>
                    {% endif %}
                </div>
                <div class="column">
                </div>
            </div>
        </div>
    </header>
    <main class="news_detail">
        <div class="main-wrap">
            <section id="section1" class="section1">
                <ul class="section1__list">
                    <li>
                        <a href="{{ url('news.list') }}" class="active">ALL</a>
                    </li>
                    <li>
                        <a href="{{ url('news.latest.list') }}">{{ 'Latest News'| trans }}</a>
                    </li>
                    <li>
                        <a href="">{{ 'Brand News'| trans }}</a>
                    </li>
                </ul>
                <form class="section1__search-form">
                    <input type="text" placeholder="SEARCH">
                </form>
            </section>
            <section class="section2">
                <div class="row end">
                    <div class="date-wrap">
                        <div class="date-inner">
                            <div class="row">
                                <span class="year">{{ news.createAt() | date('Y') }}</span>
                                <span class="month">{{ news.createAt() | date('m') }}</span>
                            </div>
                            <div class="row border-bottom">
                                <span class="day">{{ news.createAt() | date('d') }}</span>
                                <div class="social-wrap">
                                    <span>SHARE</span>
                                    <span class="fb"></span>
                                    <span class="twitter"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="section2__title section2__title_M">
                        {% if locale == "zh_tw" %}
                            <p>
                                {{ news.zhTitle }}
                            </p>
                        {% else %}
                            <p>
                                {{ news.enTitle }}
                            </p>
                        {% endif %}
                    </div>
                    <div class="img-wrap">
                        <div class="img" style="background-image: url({{ asset(news.images[0]) }});"></div>
                    </div>
                </div>
                <div class="section2__title section2__title_P">
                    {% if locale == "zh_tw" %}
                        <p>
                            {{ news.zhTitle }}
                        </p>
                    {% else %}
                        <p>
                            {{ news.enTitle }}
                        </p>
                    {% endif %}
                </div>
                <div class="section2__content">
                    {% if locale == "zh_tw" %}
                        <p>
                            {{ news.zhContent| raw }}
                        </p>
                    {% else %}
                        <p>
                            {{ news.enContent| raw }}
                        </p>
                    {% endif %}
                </div>
                <div class="section2__page-wrap">
                    <div class="section2__page">
{#                        <a class="prev-arrow-wrap" href="">#}
{#                            <div>PRE</div>#}
{#                            <div class="prev-arrow"></div>#}
{#                        </a>#}
{#                        <a class="next-arrow-wrap" href="">#}
{#                            <div>NEXT</div>#}
{#                            <div class="next-arrow"></div>#}
{#                        </a>#}
                    </div>
                    <div class="section2__back-wrap">
                        <a class="section2__back" href="{{ url('news.list') }}">BACK</a>
                    </div>
                </div>
            </section>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/js/jquery.mousewheel.js') }}"></script>
    <script type="module" src="{{ asset('assets/js/main.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/news_detail.js') }}"></script>
{% endblock %}