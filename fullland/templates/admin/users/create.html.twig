{% extends  "admin/base.html.twig"%}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>創建使用者</h1>

                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">

                            <li class="breadcrumb-item"><a href="{{ url("admin.news.list") }}">{{ "Home Page" | trans }}</a></li>
                            <li class="breadcrumb-item active">創建使用者</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-cyan">
                            <!-- form start -->
                            <div class="card-body">
                                <form method="post" action="{{ url('admin.user.create') }}">
                                    {{ form_row(form._token) }}
                                    <div class="form-group">
                                        <label>用戶信箱</label><br>
                                        {{ form_widget(form.email, {'attr': {
                                            'class': 'form-control'
                                        }}) }}
                                        {{ form_errors(form.email, {'attr': {
                                            'class': 'form-control'
                                        }}) }}
                                    </div>

                                    <div class="form-group">
                                        <label>用戶密碼</label><br>
                                        {{ form_widget(form.password, {'attr': {
                                            'class': 'form-control'
                                        }}) }}
                                    </div>

                                    <button id="submit" class="btn btn-info">新增使用者</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}