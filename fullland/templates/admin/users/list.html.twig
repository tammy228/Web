{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>使用者列表</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ url("admin.index") }}">Home Page</a></li>
                            <li class="breadcrumb-item active">使用者列表</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead align="middle">
                                    <tr>
                                        <th scope="col">圖片</th>
                                        <th scope="col">信箱</th>
                                        <th scope="col">動作</th>
                                    </tr>
                                    </thead>

                                    <tbody align="middle">
                                    {% for user in users %}
                                        <tr>
                                            <td>
                                                <img style="vertical-align: middle" width="50px" src= "{{ asset("img/defaultUser.png")}}" />
                                            </td>
                                            <td style="vertical-align: middle">{{ user.getEmail() }}</td>
                                            <td style="vertical-align: middle">
                                                <a href="{{ url("admin.user.delete", {"id": user.getId()}) }}">
                                                    <button class="btn btn-danger btn-xs" style="margin: 0 10px 0 0;">
                                                        <i class="fas fa-trash"></i> 刪除使用者
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}