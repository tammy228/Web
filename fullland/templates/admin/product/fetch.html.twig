{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>產品內容</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ url("admin.index") }}">Home Page</a></li>
                            <li class="breadcrumb-item active">產品內容</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-cyan shadow">
                            <div class="card-header bg-gray-light">
                                <h2 class="card-title font-weight-bold">
                                    {{ product.getZhName }}  / {{ product.getEnName }}
                                </h2>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <dl>
                                    <dt>中文內容</dt>
                                    <dd>{{ product.getZhDescription()|raw }}</dd>

                                    <dt>英文內容</dt>
                                    <dd>{{ product.getEnDescription()|raw }}</dd>

                                    <dt>圖片</dt>
                                    {% for image in product.getImages%}
                                        <dd><img style="vertical-align: middle" width='300px' src="{{ image }}" /></dd>
                                    {% else %}
                                        <dd>沒有圖片</dd>
                                    {% endfor %}


                                    <dt>創建時間</dt>
                                    <dd>{{ product.getCreateAt()|date('Y-m-d H:i:s') }}</dd>

                                    <dt>最後更新</dt>
                                    <dd>{{ product.getUpdateAt()|date('Y-m-d H:i:s') }}</dd>
                                </dl>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- ./col -->
                </div>
            </div>
        </section>
    </div>
{% endblock %}

