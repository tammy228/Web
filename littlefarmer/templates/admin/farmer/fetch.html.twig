{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>小農資訊</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ url("admin.index") }}">Home Page</a></li>
                            <li class="breadcrumb-item active">小農資訊</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-cyan">
                            <div class="card-header">
                                <h2 class="card-title">
                                    {{ farmer.getName() }}
                                </h2>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <dl>
                                    <dt>照片</dt>
                                        <dd><img style="vertical-align: middle" width='300px' src="{{ farmer.getImage() }}" /></dd>
                                    <dt>信箱</dt>
                                        <dd>{{ farmer.getEmail() }}</dd>
                                    <dt>手機</dt>
                                        <dd>{{ farmer.getMobile() }}</dd>
                                    <dt>綠界支付</dt>
                                    {% if farmer.getHashKey() and farmer.getHashIV() and farmer.getMerchantID() %}
                                        <dd>已設定</dd>
                                    {% else %}
                                        <dd>未設定</dd>
                                    {% endif %}
                                </dl>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- ./col -->
                </div>
        </section>
    </div>
{% endblock %}

