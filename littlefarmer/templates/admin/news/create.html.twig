{% extends 'admin/base.html.twig' %}

{% block title %}Create Category{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm">
                        <h1>創建消息</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ url("admin.index") }}">{{ "Home Page" | trans }}</a></li>
                            <li class="breadcrumb-item active">創建消息</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div calss="row">
                    <div class="col-md-6">
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">
                                    分類
                                </h3>
                            </div>
                            {{ form_start(form) }}
                            <div class="card-body">
                                <div class="form-group">
                                    <label>英文標題</label>
                                    {{ form_widget(form.enTitle, {'attr': {
                                        'class': 'form-control',
                                    }}) }}
                                    {% for error in form.enTitle.vars['errors'] %}
                                        <label class="col-form-label" for="inputError">{{ error.message }}</label>
                                    {% endfor %}
                                </div>
                                <div class="form-group has-error">
                                    <label>中文標題</label>
                                    {{ form_widget(form.zhTitle, {'attr': {
                                        'class': 'form-control',
                                    }}) }}
                                    {% for error in form.zhTitle.vars['errors'] %}
                                        <label class="col-form-label" for="inputError">{{ error.message }}</label>
                                    {% endfor %}
                                </div>
                                <div class="form-group">
                                    <label>英文內容</label>
                                    {{ form_widget(form.enContent, {'attr': {
                                        'class': 'form-control',
                                        'style': 'height:300px;',
                                    }}) }}
                                    {% for error in form.enContent.vars['errors'] %}
                                        <label class="col-form-label" for="inputError">{{ error.message }}</label>
                                    {% endfor %}
                                </div>
                                <div class="form-group">
                                    <label>中文內容</label>
                                    {{ form_widget(form.zhContent, {'attr': {
                                        'class': 'form-control',
                                        'style': 'height:300px;',
                                    }}) }}
                                    {% for error in form.zhContent.vars['errors'] %}
                                        <label class="col-form-label" for="inputError">{{ error.message }}</label>
                                    {% endfor %}
                                </div>
                                <div class="form-group">
                                    <label>照片</label><br>
                                    {{ form_widget(form.images) }}
                                </div>
                                <button type = "submit" class="btn btn-info">送出</button></br>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
