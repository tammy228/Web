{% extends 'farmer/base.html.twig' %}

{% block title %}Report index{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm">
                        <h1>退換貨列表</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ url("farmer.index") }}">首頁</a></li>
                            <li class="breadcrumb-item active">產品名稱:{{ product.zhName }} 反饋列表</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <div class="container-fluid">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>反饋者</th>
                    <th>聯絡電話</th>
                    <th>連絡信箱</th>
                    <th>反饋時間</th>

                </tr>
                </thead>
                <tbody>
                {% for report in reports %}
                        <tr>
                            <td>
                                {{  report.name }}
                            </td>
                            <td>
                                {{ report.mobile }}
                            </td>
                            <td>
                                {{ report.content }}
                            </td>
                            <td>{{ report.createAt ? report.createAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>

                {% else %}
                    <tr>
                        <td colspan="10">沒有換貨需求</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
