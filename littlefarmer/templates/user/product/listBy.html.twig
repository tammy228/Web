{% extends 'user/base.html.twig' %}
{% block body%}
    <body>
    <div id="load"></div>
    <main>
        <div id="products" class="products">
            <h2 class="text-center">{{ title }}</h2>
            <div class="wrapper container-fluid">
                <div class="row">
                    <div class="col-xl-2">
                        <div class="products_menu slideUp wow">
                            <h3>產品分類</h3>
                            <ul>
                                <li>
                                    <h4>所有產品<i class="fas fa-angle-down"></i></h4>
                                    <ol>
                                        <li><a href="{{ url("products.list") }}"><i class="fas fa-caret-right"></i>所有產品</a></li>
                                        {% set categories = getCategories() %}
                                        {% if categories %}
                                            {% for category in categories %}
                                                <li><a href="{{ url("products.list.by.category",{'slug':category.getUuid()}) }}"><i class="fas fa-caret-right"></i>{{ category.getName() }}</a></li>
                                            {% endfor %}
                                        {% endif %}
                                        {# for loop
                                            <li><a href="./products.html"><i class="fas fa-caret-right"></i>蘋果</a></li>
                                        #}
                                    </ol>
                                </li>
                                <li>
                                    <a href="{{ url("products.list.by", {'slug':'groupBuy'}) }}">
                                        <h4>團購<i class="fas fa-angle-down"></i></h4>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ url("products.list.by", {'slug':'onSale'}) }}">
                                        <h4>限時優惠<i class="fas fa-angle-down"></i></h4>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ url("products.list.by", {'slug':'expired'}) }}">
                                        <h4>即期品<i class="fas fa-angle-down"></i></h4>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-10">
                        <div class="row slideUp wow">
                            {% for product in products %}
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <div class="item">
                                        <a href="{{ url('product.fetch',{'uuid':product.getUuid()}) }}">
                                            <div class="photo">
                                                {% if product.images %}
                                                 <img src="{{ product.images[0] }}" alt="小農點點">
                                                {% else %}
                                                    <img width="200" height="200" src= "{{ asset('/uploads/default/noPhoto.png') }}">
                                                    {% endif %}
                                            </div>
                                            <div class="text">
                                                <h5>{{ product.getZhName() }}</h5>
                                                <p>
                                                    產地：{{ product.getOrigin() }}
                                                </p>
                                                <p>
                                                    價格：{{ product.getPrice() }}元
                                                </p>
                                                <p class="red">
                                                    紅利加購：8點+50元
                                                </p>
                                            </div>
                                        </a>

                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="quality" class="content">
            <div class="wrapper">
                <div class="row slideUp wow">
                    <div class="item col-xl-3 col-md-6 col-6">
                        <img src="{{ asset('dist/img/q1.png') }}" alt="小農點點">
                        <div class="title">
                            <h3>10%高品質</h3>
                        </div>
                        <p>
                            限量供應小農10%的外銷商品
                        </p>
                    </div>
                    <div class="item col-xl-3 col-md-6 col-6">
                        <img src="{{ asset('dist/img/q4.png') }}" alt="小農點點">
                        <div class="title">
                            <h3>QR碼身分證</h3>
                        </div>
                        <p>
                            每項產品皆有完整QR碼身分履歷
                        </p>
                    </div>
                    <div class="item col-xl-3 col-md-6 col-6">
                        <img src="{{ asset('dist/img/q3.png') }}" alt="小農點點">
                        <div class="title">
                            <h3>紙箱回收</h3>
                        </div>
                        <p>
                            友善環境，回收無污損包裝箱享折扣
                        </p>
                    </div>
                    <div class="item col-xl-3 col-md-6 col-6">
                        <img src="{{ asset('dist/img/q2.png') }}" alt="小農點點">
                        <div class="title">
                            <h3>無電子發票</h3>
                        </div>
                        <p>
                            本站小農產品，不提供電子及紙本發票
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div id="loginProduct">
        <div class="content">
            <button id="times"><i class="far fa-times-circle"></i></button>
            <div class="container-fluid scrollBar">
                <div class="row">
                    <div class="col-xl-4 col-md-4 photo">
                        <pre class="text-center">您購買的商品：</pre>
                        <h2 class="text-center">摩天嶺－茂谷柑禮盒</h2>
                        <div class="slick">
                            <div class="item">
                                <img src="./image/product.jpg" alt="">
                            </div>
                            <div class="item">
                                <img src="./image/product.jpg" alt="">
                            </div>
                            <div class="item">
                                <img src="./image/product.jpg" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-8 col-md-8 data">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="text">
                                    <h3>摘種農友</h3>
                                    <p>果農：吳秀琴</p>
                                    <p>果園：摩天嶺－琴</p>
                                    <p>登記字號：7223</p>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="text-center">
                                    <img src="https://cw1.tw/CW/images/article/C1440991163343.jpg" alt="農友照片">
                                </div>
                            </div>
                        </div>
                        <div class="text">
                            <h3>商品規格</h3>
                            <p>茂谷柑禮盒*12盒</p>
                        </div>
                        <div class="text">
                            <h3>摘種農友</h3>
                            <p>果農：吳秀琴</p>
                            <p>果園：摩天嶺－琴</p>
                            <p>登記字號：7223</p>
                        </div>
                        <div class="text">
                            <h3>商品故障換貨</h3>
                            <p>請填入聯絡資訊，將有專人會為您進行聯絡。</p>
                            <form>
                                <div class="form">
                                    <label for="name">姓名：</label>
                                    <input type="name" placeholder="請輸入姓名">
                                </div>
                                <div class="form">
                                    <label for="tel">電話：</label>
                                    <input type="tel" placeholder="請輸入電話">
                                </div>
                                <div class="form">
                                    <label for="email">E-mail：</label>
                                    <input type="email" placeholder="請輸入E-mail">
                                </div>
                                <div class="text-right"><button class="btn">送出</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </body>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset("dist/js/imgLiquid-min.js") }}"></script>
    <script src="{{ asset("dist/js/slick.min.js") }}"></script>
    <script src="{{ asset("dist/js/ui.js") }}"></script>
    <script src="{{ asset("dist/js/wow.min.js") }}"></script>
{% endblock %}