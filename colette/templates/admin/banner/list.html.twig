{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>橫幅列表</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ url("admin.index") }}">Home Page</a></li>
                            <li class="breadcrumb-item active">橫幅列表</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <table class="table">
                                    <thead align="middle">
                                    <tr>
                                        <th scope="col">圖片</th>
                                        <th scope="col">位置</th>
                                        <th scope="col">動作</th>
                                    </tr>
                                    </thead>

                                    <tbody align="middle">
                                    {% for key,image in banner.images %}
                                        <tr>
                                            <td style="vertical-align: middle; max-width: 150px; max-height: 150px">
                                                {% if image %}
                                                    <img style="vertical-align: middle" width="100%" src="{{ image[0] }}">
                                                {% else %}
                                                    <img style="vertical-align: middle" width="100%" src="{{ '/img/defaultThumbnail.png' }}">
                                                {% endif %}
                                            </td>
                                            <td>
                                                {{ loc(key) }}
                                            </td>
                                            <td>
                                                <a href="{{ url("admin.banner.update", {"loc": key}) }}">
                                                    <button class="btn btn-warning btn-sm" style="margin: 0 10px 0 0;">
                                                        <i class="fas fa-edit"></i> 更換圖片
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                {#                                <a href="{{ url("admin.photo.create",{"newsId": 1 }) }}">#}
                                {#                                    <button class="btn btn-info ">上傳相片</button>#}
                                {#                                </a>#}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}