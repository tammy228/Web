{% extends  "admin/base.html.twig"%}

{% block body %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>新增橫幅</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ url("admin.index") }}">Home Page</a></li>
                            <li class="breadcrumb-item active">新增橫幅</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-9">
                        <!-- general form elements -->
                        <div class="card card-cyan">
                            <div class="card-header">
                                <h3 class="card-title">照片資訊</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <div class="card-body">
                                <form method="post"
                                      action="{{ url('admin.banner.create') }}"
                                      enctype="multipart/form-data">
                                    {{ form_row(form._token) }}

                                    <div class="form-group">
                                        <label>照片</label><br>
                                        {{ form_widget(form.images) }}
                                    </div>


                                    <button type="submit" class="btn btn-info">新增圖片</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        CKEDITOR.replace( 'news[zhContent]' );
        CKEDITOR.replace( 'news[enContent]' );
    </script>

{% endblock %}



