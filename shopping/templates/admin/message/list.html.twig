{% extends 'admin/base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm">
                    <h1>私訊列表</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ url("admin.index") }}">首頁</a></li>
                        <li class="breadcrumb-item active">私訊列表</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div>
        <a href="{{ path('admin.message.delete') }}">
        清理六個月之前紀錄
        </a>
    </div>
    <div class="container-fluid">
        <div class="col-7">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>寄送者</th>

        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            {% if user.name != 'admin' %}
            <tr>
                <td><a href="{{ path('admin.message.fetch', {'id': user.id}) }}"> {{ user.name }}<br></a>最後時間 {{ getFinalDate(user.id)|date('Y-m-d H:i:s') }}</td>
            </tr>
            {% endif %}
        {% else %}

        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
</div>
{% endblock %}
